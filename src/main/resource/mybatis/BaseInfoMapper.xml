<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.college.repository.BaseInfoDao">

	<resultMap id="resultMap" type="com.college.entity.BaseInfo">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="resume" column="resume"/>
        <result property="contentType" column="contentType"/>
        <result property="image" column="image"/>
        <result property="link" column="link"/>
        <result property="content" column="content"/>
        <result property="status" column="status"/>
        <result property="createTime" column="createTime"/>
        <result property="updateUser" column="updateUser"/>
        <result property="updateTime" column="updateTime"/>
		 <result property="maxId" column="maxId"/>
	</resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
		id,title,resume,contentType,image,link,content,status,createTime,updateUser,updateTime
	</sql>
	
	<!-- 获取单个实体bean -->
	<select id="get" parameterType="Long" resultType="com.college.entity.BaseInfo">
		SELECT <include refid="columns" />
		FROM base_info
		WHERE id=#{id}
	</select>

	<!-- 新增 -->
	<insert id="insert" parameterType="com.college.entity.BaseInfo" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO base_info (
        	title,
        	resume,
        	contentType,
        	image,
        	link,
        	content,
        	status,
        	createTime,
        	updateUser,
        	updateTime
		) VALUES (
        	#{title},
        	#{resume},
        	#{contentType},
        	#{image},
        	#{link},
        	#{content},
        	#{status},
        	#{createTime},
        	#{updateUser},
        	#{updateTime}
		)
	</insert>
	
	<!-- 更新 -->
	<update id="update" >
        UPDATE base_info
		<set>
			<if test="title!=null and title!='' ">
				title = #{title},
			</if>
			<if test="resume!=null and resume!='' ">
				resume = #{resume},
			</if>
			<if test="contentType!=null and contentType!='' ">
				contentType = #{contentType},
			</if>
			<if test="image!=null and image!='' ">
				image = #{image},
			</if>
			<if test="link!=null and link!='' ">
				link = #{link},
			</if>
			<if test="content!=null and content!='' ">
				content = #{content},
			</if>
			<if test="status!=null and status!='' ">
				status = #{status},
			</if>
			<if test="createTime!=null and createTime!='' ">
				createTime = #{createTime},
			</if>
			<if test="updateUser!=null and updateUser!='' ">
				updateUser = #{updateUser},
			</if>
			<if test="updateTime!=null and updateTime!='' ">
				updateTime = #{updateTime}
			</if>
		</set>
        WHERE 
	        id = #{id}
	</update>
	
	<!-- 删除用户 -->
	<delete id="delete" parameterType="Integer">
	     DELETE FROM base_info WHERE id=#{id}
	</delete>

	<!-- 查询分页列表 -->
	<select id="searchPageList" resultMap="resultMap">
		SELECT <include refid="columns" />
		FROM base_info
		<where>
	       <if test="searchFields.title != null and searchFields.title != ''">
				AND title = #{searchFields.title}
			</if>
	       <if test="searchFields.resume != null and searchFields.resume != ''">
				AND resume = #{searchFields.resume}
			</if>
	       <if test="searchFields.contentType != null and searchFields.contentType != ''">
				AND contentType = #{searchFields.contentType}
			</if>
	       <if test="searchFields.image != null and searchFields.image != ''">
				AND image = #{searchFields.image}
			</if>
	       <if test="searchFields.link != null and searchFields.link != ''">
				AND link = #{searchFields.link}
			</if>
	       <if test="searchFields.content != null and searchFields.content != ''">
				AND content = #{searchFields.content}
			</if>
	       <if test="searchFields.status != null and searchFields.status != ''">
				AND status = #{searchFields.status}
			</if>
	       <if test="searchFields.createTime != null and searchFields.createTime != ''">
				AND createTime = #{searchFields.createTime}
			</if>
	       <if test="searchFields.updateUser != null and searchFields.updateUser != ''">
				AND updateUser = #{searchFields.updateUser}
			</if>
	       <if test="searchFields.updateTime != null and searchFields.updateTime != ''">
				AND updateTime = #{searchFields.updateTime}
			</if>
		</where>
	</select>
	
	<!--条件查询分页记录总数-->
	<select id="getTotalCount" resultType="Long">
		SELECT count(1)
		FROM base_info
		<where>
	       <if test="searchFields.title != null and searchFields.title != ''">
				AND title = #{searchFields.title}
			</if>
	       <if test="searchFields.resume != null and searchFields.resume != ''">
				AND resume = #{searchFields.resume}
			</if>
